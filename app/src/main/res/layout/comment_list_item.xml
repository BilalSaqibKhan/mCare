<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:id="@+id/main_blog_post">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/comment_user_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_brightness_1_grey_24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/comment_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_toRightOf="@id/comment_user_image"
                android:text="Username"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/comment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/comment_user_image"
                android:layout_below="@id/comment_user_name"
                android:text="Comment Date"
                android:layout_marginLeft="15dp"/>


            <TextView
                android:id="@+id/comment_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is the post comment..."
                android:layout_below="@id/comment_date"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>