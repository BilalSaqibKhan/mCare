<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details_toolbar"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <ImageView
        android:id="@+id/details_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/details_toolbar" />


    <ImageView
        android:id="@+id/details_share_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_share_yellow_24dp"
        android:layout_below="@id/details_image"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/details_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_save_green_24dp"
        android:layout_below="@id/details_image"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/details_share_btn"
        android:layout_marginTop="10dp"/>




    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/details_share_btn"
        android:layout_marginTop="15dp"
        android:text="Title..."
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"/>


    <TextView
        android:id="@+id/txt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title"
        android:layout_marginTop="15dp"
        android:text="Description..."
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"/>

    </RelativeLayout>

</ScrollView>